<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:clickable="true"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu">

    </com.google.android.material.navigation.NavigationView>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EBCDC3"
        tools:context=".Contactanos">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/contact_us"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.501"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10sp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/card_style"
                    android:fontFamily="@font/poppins_medium"
                    android:justificationMode="inter_word"
                    android:padding="20sp"
                    android:text="@string/info_contact_us"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.473"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    app:layout_constraintVertical_bias="0.018" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="250sp"
                    android:layout_height="60sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_medium"
                    android:onClick="abrirWhatsApp"
                    android:text="WhatsApp"
                    android:textColor="#000000"
                    app:backgroundTint="#EBCBC3"
                    app:icon="@drawable/whatsapp_logo"
                    app:iconTint="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView14"
                    app:layout_constraintVertical_bias="0.0"
                    app:strokeColor="#000000"
                    app:strokeWidth="3dp" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="250sp"
                    android:layout_height="60sp"
                    android:fontFamily="@font/poppins_medium"
                    android:onClick="abrirFacebook"
                    android:text="Facebook"
                    android:textColor="#000000"
                    app:backgroundTint="#EBCBC3"
                    app:icon="@drawable/facebook_logo"
                    app:iconTint="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button4"
                    app:layout_constraintVertical_bias="0.0"
                    app:strokeColor="#000000"
                    app:strokeWidth="3dp" />/>

                <Button
                    android:id="@+id/button6"
                    android:layout_width="250sp"
                    android:layout_height="60sp"
                    android:fontFamily="@font/poppins_medium"
                    android:onClick="abrirInstagram"
                    android:text="Instagram"
                    android:textColor="#000000"
                    app:backgroundTint="#EBCBC3"
                    app:icon="@drawable/instagram_logo"
                    app:iconTint="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button5"
                    app:layout_constraintVertical_bias="0.0"
                    app:strokeColor="#000000"
                    app:strokeWidth="3dp" />

                <Button
                    android:id="@+id/button7"
                    android:layout_width="250sp"
                    android:layout_height="60sp"
                    android:fontFamily="@font/poppins_medium"
                    android:onClick="abrirTelefono"
                    android:text="Llámanos"
                    android:textColor="#000000"
                    app:backgroundTint="#EBCBC3"
                    app:icon="@drawable/phone_solid"
                    app:iconTint="#000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button6"
                    app:layout_constraintVertical_bias="0.0"
                    app:strokeColor="#000000"
                    app:strokeWidth="3dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Ubícanos"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button7"
                    app:layout_constraintVertical_bias="0.0" />

                <WebView
                    android:id="@+id/mapa"
                    android:layout_width="390dp"
                    android:layout_height="390dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:foregroundGravity="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView15" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>